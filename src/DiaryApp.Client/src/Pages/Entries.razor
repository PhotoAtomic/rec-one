@page "/entries"
@implements IDisposable
@inject IVideoEntryClient EntryClient
@inject ISearchClient SearchClient
@inject ITranscriptionClient TranscriptionClient
@inject NavigationManager NavigationManager

<h1>Entries</h1>

<EditForm Model="this" OnValidSubmit="Search">
    <input @bind="_keyword" placeholder="Search by keyword or describe a moment" />
    <button type="submit">Search</button>
</EditForm>

@if (!string.IsNullOrWhiteSpace(_errorMessage))
{
    <div class="error-banner">
        @_errorMessage
    </div>
}

@if (_results is null)
{
    <p>Loading entries...</p>
}
else if (_results.Count == 0)
{
    <p>No entries yet.</p>
}
else
{
    <ul class="entry-list">
        @foreach (var entry in _results)
        {
            <li class="entry-card">
                <div class="entry-card__header">
                    <div class="entry-card__info">
                        <h3>@entry.Title</h3>
                        <p class="entry-card__timestamp">@entry.StartedAt.ToLocalTime().ToString("f")</p>
                        @if (entry.ProcessingStatus == VideoEntryProcessingStatus.InProgress)
                        {
                            <p class="entry-card__status">
                                <span class="button-spinner" aria-hidden="true"></span>
                                <span>AI processing in progress...</span>
                            </p>
                        }
                    </div>
                </div>

                <div class="entry-card__body">
                    <div class="entry-card__media">
                        <VideoPreview Entry="entry" PreviewSecond="5" />
                        <div class="entry-card__actions">
                            <button type="button"
                                    class="icon-button"
                                    title="Edit entry"
                                    aria-label="Edit entry"
                                    @onclick="() => OpenEditor(entry.Id)">
                                <svg viewBox="0 0 24 24" role="img" aria-hidden="true" focusable="false">
                                    <path d="M3 17.25V21h3.75L17.81 9.94l-3.75-3.75L3 17.25zM20.71 7.04c.39-.39.39-1.02 0-1.41l-2.34-2.34a.9959.9959 0 0 0-1.41 0l-1.83 1.83 3.75 3.75 1.83-1.83z" />
                                </svg>
                            </button>
                            <button type="button"
                                    class="icon-button danger"
                                    title="Delete entry"
                                    aria-label="Delete entry"
                                    disabled="@IsDeleting(entry.Id)"
                                    @onclick="() => DeleteEntry(entry.Id)">
                                @if (IsDeleting(entry.Id))
                                {
                                    <span class="button-spinner" aria-hidden="true"></span>
                                }
                                else
                                {
                                    <svg viewBox="0 0 24 24" role="img" aria-hidden="true" focusable="false">
                                        <path d="M16 9v10H8V9h8m-1.5-6h-5l-1 1H5v2h14V4h-3.5l-1-1z" />
                                    </svg>
                                }
                            </button>
                        </div>
                    </div>
                    <div class="entry-card__content">
                        @if (!string.IsNullOrWhiteSpace(entry.Description))
                        {
                            <p class="entry-card__description">@entry.Description</p>
                        }
                        @if (!string.IsNullOrWhiteSpace(entry.Summary))
                        {
                            <p class="entry-card__summary">@entry.Summary</p>
                        }
                        <div class="entry-card__tags">
                            @if (entry.Tags.Any())
                            {
                                <div class="tag-list">
                                    @foreach (var tag in entry.Tags.OrderBy(t => t, System.StringComparer.OrdinalIgnoreCase))
                                    {
                                        <span class="tag-pill">@tag</span>
                                    }
                                </div>
                            }
                            else
                            {
                                <span class="tag-placeholder">No tags yet</span>
                            }
                        </div>
                    </div>
                </div>

                <div class="entry-card__footer">
                    <button class="with-spinner secondary"
                            @onclick="() => LoadTranscript(entry.Id)"
                            disabled="@IsTranscriptLoading(entry.Id)">
                        @if (IsTranscriptLoading(entry.Id))
                        {
                            <span class="button-spinner" aria-hidden="true"></span>
                            <span>Loading transcript...</span>
                        }
                        else
                        {
                            <span>Show transcript</span>
                        }
                    </button>
                </div>

                @if (_transcripts.TryGetValue(entry.Id, out var transcript))
                {
                    <details open>
                        <summary>Transcript</summary>
                        <p>@transcript</p>
                    </details>
                }
            </li>
        }
    </ul>
}

@code {
    private string _keyword = string.Empty;
    private IReadOnlyCollection<VideoEntryDto>? _results;
    private string? _errorMessage;
    private readonly Dictionary<Guid, string> _transcripts = new();
    private readonly HashSet<Guid> _loadingTranscripts = new();
    private readonly HashSet<Guid> _deletingEntries = new();
    private readonly HashSet<Guid> _processingEntries = new();
    private CancellationTokenSource? _pollingCts;
    private Task? _pollingTask;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            _results = await EntryClient.ListAsync();
            UpdateProcessingEntries();
            StartPollingIfNeeded();
        }
        catch (HttpRequestException ex)
        {
            _errorMessage = $"Network error loading entries: {ex.Message}";
            _results = Array.Empty<VideoEntryDto>();
        }
        catch (System.Text.Json.JsonException ex)
        {
            _errorMessage = $"Invalid response from server. The server may be misconfigured.";
            _results = Array.Empty<VideoEntryDto>();
            Console.WriteLine($"JSON Error: {ex.Message}");
        }
        catch (Exception ex)
        {
            _errorMessage = "Unable to load entries. Please try again later.";
            _results = Array.Empty<VideoEntryDto>();
            Console.WriteLine($"Error loading entries: {ex}");
        }
    }

    private async Task Search()
    {
        try
        {
            _errorMessage = null;
            var criteria = string.IsNullOrWhiteSpace(_keyword) ? string.Empty : _keyword.Trim();
            if (string.IsNullOrWhiteSpace(criteria))
            {
                _results = await EntryClient.ListAsync();
            }
            else
            {
                var searchResults = await SearchClient.SearchAsync(new SearchQuery(criteria, criteria));
                var entries = new List<VideoEntryDto>();
                foreach (var match in searchResults)
                {
                    var entry = await EntryClient.GetAsync(match.Id);
                    if (entry is not null)
                    {
                        entries.Add(entry);
                    }
                }

                _results = entries;
            }

            UpdateProcessingEntries();
            StartPollingIfNeeded();
        }
        catch (Exception)
        {
            _errorMessage = "Search failed. Please try again later.";
        }
    }

    private async Task LoadTranscript(Guid id)
    {
        if (_transcripts.ContainsKey(id) || !_loadingTranscripts.Add(id))
        {
            return;
        }

        try
        {
            var transcript = await TranscriptionClient.GetTranscriptAsync(id);
            if (!string.IsNullOrWhiteSpace(transcript))
            {
                _transcripts[id] = transcript;
            }
        }
        finally
        {
            _loadingTranscripts.Remove(id);
        }
    }

    private bool IsTranscriptLoading(Guid id) => _loadingTranscripts.Contains(id);
    private bool IsDeleting(Guid id) => _deletingEntries.Contains(id);

    private void OpenEditor(Guid id)
    {
        NavigationManager.NavigateTo($"/entries/{id}/edit");
    }

    private async Task DeleteEntry(Guid id)
    {
        if (!_deletingEntries.Add(id))
        {
            return;
        }

        try
        {
            await EntryClient.DeleteAsync(id);
            if (_results is not null)
            {
                _results = _results
                    .Where(entry => entry.Id != id)
                    .ToArray();
            }

            _transcripts.Remove(id);
            _loadingTranscripts.Remove(id);
        }
        finally
        {
            _deletingEntries.Remove(id);
        }
    }

    private void UpdateProcessingEntries()
    {
        _processingEntries.Clear();
        if (_results is null)
        {
            return;
        }

        foreach (var entry in _results)
        {
            if (entry.ProcessingStatus == VideoEntryProcessingStatus.InProgress)
            {
                _processingEntries.Add(entry.Id);
            }
        }
    }

    private void StartPollingIfNeeded()
    {
        if (_processingEntries.Count == 0)
        {
            _pollingCts?.Cancel();
            _pollingTask = null;
            return;
        }

        if (_pollingTask is not null && !_pollingTask.IsCompleted)
        {
            return;
        }

        _pollingCts?.Cancel();
        _pollingCts = new CancellationTokenSource();
        _pollingTask = PollProcessingEntriesAsync(_pollingCts.Token);
    }

    private async Task PollProcessingEntriesAsync(CancellationToken cancellationToken)
    {
        try
        {
            while (!cancellationToken.IsCancellationRequested)
            {
                if (_processingEntries.Count == 0)
                {
                    return;
                }

                try
                {
                    await Task.Delay(TimeSpan.FromSeconds(5), cancellationToken);
                }
                catch (TaskCanceledException)
                {
                    return;
                }

                if (_results is null)
                {
                    continue;
                }

                var updated = _results.ToList();
                var ids = _processingEntries.ToArray();
                foreach (var id in ids)
                {
                    if (cancellationToken.IsCancellationRequested)
                    {
                        return;
                    }

                    var entry = await EntryClient.GetAsync(id, cancellationToken);
                    if (entry is null)
                    {
                        updated.RemoveAll(e => e.Id == id);
                        continue;
                    }

                    var index = updated.FindIndex(e => e.Id == id);
                    if (index >= 0)
                    {
                        updated[index] = entry;
                    }

                    if (entry.ProcessingStatus != VideoEntryProcessingStatus.InProgress)
                    {
                        _processingEntries.Remove(id);
                    }
                }

                _results = updated;
                UpdateProcessingEntries();
                await InvokeAsync(StateHasChanged);

                if (_processingEntries.Count == 0)
                {
                    return;
                }
            }
        }
        catch (OperationCanceledException)
        {
        }
    }

    public void Dispose()
    {
        _pollingCts?.Cancel();
        _pollingCts?.Dispose();
    }
}
